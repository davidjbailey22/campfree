<style>
@import url('https://fonts.googleapis.com/css2?family=Caesar+Dressing&display=swap');
</style>

<div class="navbar navbar-expand-sm navbar-light navbar-lewagon sticky-top">
<%# if working witj local files, dont need relative path. just file name (absolute path) %>
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "https://res.cloudinary.com/darienhz/image/upload/v1605895215/Outpost_Logo_Color_ywgwum.png" %> 
  <% end %>
  <h1 class="outpost-name">OUTPOST</h1>

  <%# <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button> %>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <div class = "pill-nav" id = "navbarDropdown", data-toggle = "dropdown" , aria-haspopup = 'true', aria-expanded = 'false'>
            <i class="fas fa-bars"></i>
             <% if not current_user.photo.nil? %>
              <%= cl_image_tag(current_user.photo.key, crop: :fill, class: "avatar dropdown-toggle")%>
             <% end %>
          </div>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
             <%= link_to "Bookings", bookings_user_path(current_user), class: "dropdown-item" %>
             <%= link_to "Listings", tents_user_path(current_user), class: "dropdown-item" %>
             <%= link_to "Add a tent", new_tent_path, class: "dropdown-item" %>
             <%= link_to "Profile", user_path(current_user), class: "dropdown-item" %>
             <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>  
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
