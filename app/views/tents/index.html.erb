<div class="container">
  <div class="text-center pt-2">
    <h2>Find your experience</h2>
  </div>
</div>
<div class="container">
  <div class="content-layout">
        <div class="cards">
          <% @tents.each do |tent| %>
          <%= link_to tent_path(tent) do %>
          <div class="card">
            <%= cl_image_tag(tent.photos.first.key, crop: :fill, class: "card-image") %>
            <p><%=tent.title%></p>
          </div>
          <% end %>
        <% end %>
      </div>
  </div>
</div>
